<header>
    <div class="banner">
        <a class="landing-logo" href="/"><img class="logo" src="/assets/images/pwc_logo.png" alt=""></a>
    </div>
</header>

<div class="edit-entry-page">
    <section class="content">
        <h1 class="title">EDIT ENTRY</h1> 
        <form action="/journals/<%= journal['id'] %>" method="POST">
            <input type="hidden" name='_method' value="put">

            <input placeholder="Location" type="text" name="location" value="<%= journal['location']%>">
            <input placeholder="Date"type="text" name="date" value="<%= journal['date']%>">
            <input placeholder="Other Instructors" type="text" name="other_instructor" value="<%= journal['other_instructor']%>">
            <input placeholder="New Students" type="text" name="new_students" value="<%= journal['new_students']%>">
            <input placeholder="Injuries" type="text" name="injuries" value="<%= journal['injuries']%>">
            <input placeholder="Drills" type="text" name="drills" value="<%= journal['drills']%>">
            <input placeholder="Notes" type="text" name="notes" value="<%= journal['notes']%>">
            <input placeholder="Image URL" type="text" name="image_url" value="<%= journal['image_url']%>">
            <button class="submit-btn" >UPDATE ENTRY</button>
        </form>
    </section>
</div>

<h1><%= journal %></h1>